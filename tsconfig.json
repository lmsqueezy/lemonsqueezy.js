{
  "compilerOptions": {
    "lib": ["ESNext"],

    "allowJs": true,
    "module": "ESNext",
    "moduleDetection": "force",
    "target": "ESNext",

    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "noEmit": true,
    "verbatimModuleSyntax": true,

    /* Linting */
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true
  }
}
