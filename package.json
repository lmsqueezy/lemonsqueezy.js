{
  "name": "@lemonsqueezy/lemonsqueezy.js",
  "description": "The official Lemon Squeezy JavaScript SDK.",
  "version": "1.2.5",
  "author": "Lemon Squeezy",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "homepage": "https://github.com/lmsqueezy/lemonsqueezy.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lmsqueezy/lemonsqueezy.js.git"
  },
  "bugs": {
    "url": "https://github.com/lmsqueezy/lemonsqueezy.js/issues"
  },
  "keywords": [
    "api",
    "lemonsqueezy",
    "javascript",
    "typescript"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run --watch examples/dev.ts",
    "build": "unbuild",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "changeset": "changeset",
    "version": "changeset version",
    "version:dev": "changeset version --snapshop --no-git-tag --tag dev",
    "release": "bun run typecheck && bun run format && bun run lint:fix && bun run build && changeset publish",
    "release:dev": "bun run typecheck && bun run format && bun run lint:fix && bun run build && changeset publish --snapshot --no-git-tag --tag dev",
    "format": "biome format . --write",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --apply",
    "typecheck": "tsc --noEmit",
    "up": "taze major -w",
    "export-size": "export-size ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@heybrostudio/biome-config": "^0.0.5",
    "@types/bun": "latest",
    "export-size": "^0.7.0",
    "lint-staged": "^15.2.1",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.13.2",
    "unbuild": "^2.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged",
    "commit-msg": "bun run commitlint --edit \"$1\""
  },
  "lint-staged": {
    "*": "biome lint . --apply"
  }
}
